  "parameters": {
    "prefix": {
      "type": "string"
    },
    "region": {
      "type": "string"
    }
  },
  "variables": {
    "lawsName": "[format('{0}-laws', parameters('prefix'))]",
    "appInsName": "[format('{0}-ai', parameters('prefix'))]"
