{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.15.31.15270",
      "templateHash": "7595800233303493537"
    }
  },
  "parameters": {
    "prefix": {
      "type": "string"
    },
    "region": {
      "type": "string"
    },
    "infraRgName": {
      "type": "string"
    },
    "containerImage": {
      "type": "string"
    },
    "targetPort": {
      "type": "int"
    }
  },
  "variables": {
    "strAccName": "[replace(format('{0}-str', parameters('prefix')), '-', '')]",
    "logAnalyticsName": "[format('{0}-laws', parameters('prefix'))]",
    "uamiName": "[format('{0}-uami', parameters('prefix'))]",
    "acrName": "[replace(format('{0}-acr', parameters('prefix')), '-', '')]",
    "aciName": "[format('{0}-aci', parameters('prefix'))]",
    "appInsightsName": "[format('{0}-ai', variables('aciName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "[variables('appInsightsName')]",
      "location": "[parameters('region')]",
      "kind": "web",
      "properties": {
        "Application_Type": "web",
        "WorkspaceResourceId": "[extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, parameters('infraRgName')), 'Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName'))]",
        "publicNetworkAccessForIngestion": "Enabled",
        "publicNetworkAccessForQuery": "Enabled"
      }
    },
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2022-09-01",
      "name": "[variables('aciName')]",
      "location": "[parameters('region')]",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[format('{0}', extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, parameters('infraRgName')), 'Microsoft.ManagedIdentity/userAssignedIdentities', variables('uamiName')))]": {}
        }
      },
      "properties": {
        "osType": "Linux",
        "restartPolicy": "OnFailure",
        "containers": [
          {
            "name": "[format('{0}-container', variables('aciName'))]",
            "properties": {
              "image": "[parameters('containerImage')]",
              "ports": [
                {
                  "port": "[parameters('targetPort')]",
                  "protocol": "TCP"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGB": 2
                }
              },
              "environmentVariables": [
                {
                  "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
                  "value": "[reference(resourceId('Microsoft.Insights/components', variables('appInsightsName')), '2020-02-02').ConnectionString]"
                }
              ]
            }
          }
        ],
        "imageRegistryCredentials": [
          {
            "server": "[reference(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, parameters('infraRgName')), 'Microsoft.ContainerRegistry/registries', variables('acrName')), '2022-12-01').loginServer]",
            "identity": "[extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, parameters('infraRgName')), 'Microsoft.ManagedIdentity/userAssignedIdentities', variables('uamiName'))]"
          }
        ],
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "port": "[parameters('targetPort')]",
              "protocol": "TCP"
            }
          ],
          "autoGeneratedDomainNameLabelScope": "Unsecure",
          "dnsNameLabel": "[variables('aciName')]"
        },
        "diagnostics": {
          "logAnalytics": {
            "workspaceId": "[reference(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, parameters('infraRgName')), 'Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName')), '2022-10-01').customerId]",
            "workspaceKey": "[listKeys(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, parameters('infraRgName')), 'Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName')), '2022-10-01').primarySharedKey]"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Insights/components', variables('appInsightsName'))]"
      ]
    }
  ]
}